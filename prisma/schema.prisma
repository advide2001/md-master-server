// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRESQL")
}

// Define the User model for representing user-related data.
model User {
  userId        String   @id @default(cuid())
  clerkID       String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  officialName  String
  displayName   String
  email         String   @unique
  emailVerified Boolean  @default(false)
  avatarUrl     String?

  // Define the relationship to Project
  projects Project[] // A user can have multiple projects.

  // Define an index for faster querying
  @@index([userId])
  @@index([clerkID])
}

// Define the Project model for representing a collection of markdown documents
model Project {
  projectId         String             @id @default(cuid())
  title             String             @db.VarChar(100)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  authorId          String
  markdownDocuments MarkdownDocument[]

  // Define the relationship to the User who created the project.
  author User @relation(fields: [authorId], references: [userId]) // A user can have multiple projects

  // define an index for faster querying
  @@index([projectId])
}

// Define the MarkdownDocument model for representing a markdown document
model MarkdownDocument {
  documentId      String @id @default(cuid())
  documentTitle   String @db.VarChar(150)
  documentContent String

  // Define relationshipo between a markdown document and the project
  Project   Project @relation(fields: [documentId], references: [projectId]) // A project can have multiple markdown documents
  projectId String

  // define an index for faster querying
  @@index([documentId])
}
