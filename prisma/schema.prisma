// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRESQL")
}

// Define the User model for representing user-related data.
model User {
  userId        String   @id @default(cuid())
  clerkID       String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  firstName     String   @db.VarChar(50)
  lastName      String   @db.VarChar(50)
  displayName   String   @db.VarChar(25)
  email         String   @unique
  emailVerified Boolean  @default(false)
  avatarUrl     String?

  // Define the relationship to Project
  projects MarkdownDocument[] // A user can have multiple projects.

  // Define an index for faster querying
  @@index([userId])
  @@index([clerkID])
}

// Define the MarkdownDocument model for representing a markdown document
model MarkdownDocument {
  documentId      String   @id @default(cuid())
  documentTitle   String   @db.VarChar(100)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  documentContent String

  // Define relationshipo between a markdown document and the project
  Author    User   @relation(fields: [documentId], references: [userId]) // A project can have multiple markdown documents
  projectId String

  // define an index for faster querying
  @@index([documentId])
}
